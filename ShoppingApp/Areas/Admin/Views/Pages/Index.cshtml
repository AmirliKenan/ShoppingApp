@model IEnumerable<Page>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";

}

<h1>Index</h1>

<p>
    <a class="btn btn-primary" asp-action="Create"><i class="fas fa-plus"></i> Create New Page</a>
</p>
<table id="tblData" class="table">
    <thead>
        <tr>
            
            <th>
                Title
            </th>
            <th>
                Slug
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
              
                <td>
                    @item.Title
                </td>
                <td>
                    @item.Slug
                </td>
                
                <td>
                    <a  asp-action="Edit" asp-controller="Pages" asp-area="Admin" asp-route-id="@item.Id"  class="btn btn-success text-white" style="cursor:pointer"> <i class="fas fa-edit"></i></a>
                    <a  asp-action="Details" asp-controller="Pages" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-info text-white" style="cursor:pointer"><i class="fas fa-info-circle"></i> </a>
                    @if (item.Slug != "home")
                    {

                    <a asp-action="Delete"  asp-route-id="@item.Id"  class=" confirmDeletion btn btn-danger text-white" style="cursor:pointer"><i class="fas fa-trash-alt"></i></a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts
{

    <script src="~/js/tablechanged.js"></script>

 }
