@model IEnumerable<Product>

@{
    ViewData["Title"] = "Products";
}

<h1>Products</h1>

<p>
    <a class="btn btn-primary" asp-action="Create"><i class="fas fa-plus"></i> Create New Product</a>
</p>
<table id="tblData" class="table">
    <thead>
        <tr>

            <th>
                Name
            </th>
            <th>
                Price
            </th>
            <th>
                Category
            </th>
            <th>
                Image
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @item.Name
                </td>

                <td>
                    @item.Price.ToString("C2")
                </td>
                <td>
                    @item.Category.Name
                </td>
                <td>
                    <img src="/media/products/@item.Image" width="100" />
                </td>
                <td>
                    <a asp-action="Edit" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-success text-white" style="cursor:pointer"> <i class="fas fa-edit"></i></a>
                    <a asp-action="Details" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-info text-white" style="cursor:pointer"><i class="fas fa-info-circle"></i> </a>
                    <a asp-action="Delete" asp-area="Admin" asp-route-id="@item.Id" class="confirmDeletion btn btn-danger text-white" style="cursor:pointer"><i class="fas fa-trash-alt"></i></a>

                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts
{

    <script src="~/js/tablechanged.js"></script>

}
