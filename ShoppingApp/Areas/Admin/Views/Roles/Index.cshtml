@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Roles";

}

<h1>Roles</h1>

<p>
    <a class="btn btn-primary" asp-action="Create"><i class="fas fa-plus"></i> Create New Role</a>
</p>
<table id="tblData" class="table">
    <thead>
        <tr>

            <th>Id</th>
            <th>Role</th>
            <th>Users</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>


            <td>
                @item.Id
            </td>
            <td>
                @item.Name
            </td>
            <td user-role="@item.Id"></td>
               
           
            <td>
            <a asp-action="Edit" asp-controller="Roles" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-success text-white" style="cursor:pointer"> <i class="fas fa-edit"></i></a>   

             <a asp-action="Delete" asp-route-id="@item.Id" class="confirmDeletion btn btn-danger text-white" style="cursor:pointer"><i class="fas fa-trash-alt"></i></a>
                
            </td>
        </tr>
        }
    </tbody>
</table>
@section Scripts
{

    <script src="~/js/tablechanged.js"></script>

}
